<div class="gamma-container gamma-loading" id="gamma-container">
 
    <ul class="gamma-gallery">
    	<% @images.each do |image| %>
        <li>
            <div data-alt="<%=image%>" data-description="<h3><%=image%></h3>" data-max-width="1800" data-max-height="2400">
                <div data-src="<%='/gallery/'+image%>" data-min-width="1300"></div>
                <div data-src="<%='/gallery/'+image%>" data-min-width="1000"></div>
                <div data-src="<%='/gallery/'+image%>" data-min-width="700"></div>
                <div data-src="<%='/gallery/'+image%>" data-min-width="300"></div>
                <div data-src="<%='/gallery/'+image%>" data-min-width="200"></div>
                <div data-src="<%='/gallery/'+image%>" data-min-width="140"></div>
                <div data-src="<%='/gallery/'+image%>"></div> 
                <noscript>
                    <%= image_tag "/gallery/"+image %>
                </noscript>
            </div>
        </li>
        <% end %>
        <!-- ... -->
    </ul>
 
    <div class="gamma-overlay"></div>

</div>

    <script type="text/javascript">
    $(document).ready(function(){
    	$(function() {
 
        var GammaSettings = {
                // order is important!
                viewport : [ {
                    width : 1200,
                    columns : 5
                }, {
                    width : 900,
                    columns : 4
                }, {
                    width : 500,
                    columns : 3
                }, { 
                    width : 320,
                    columns : 2
                }, { 
                    width : 0,
                    columns : 2
                } ]
        };
 
        Gamma.init( GammaSettings );
 
    });
    }); 
    
 
</script>
 
