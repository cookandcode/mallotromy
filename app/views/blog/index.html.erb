<div class="twelve columns">
	<h2> Le blog </h2>

	<% @articles.each do |article| 
		date = DateTime.parse(article.created_at.to_s)
		date = date.strftime('%d %B %Y')
	%>
		<h3> <%= article.title %> </h3>
		<p> Date publication : <%= date %> </p> 
		<p> Auteur : <%= article.admin_user.first_name %> </p> 
		<p>
			<%= article.content %> 
		</p>
		<hr>
	<% end %>
</div>